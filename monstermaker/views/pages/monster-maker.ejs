<!DOCTYPE html>
<html lang="en">

  <% include ../partials/head %>

  <body>

    <% include ../partials/navbar %>

    <!-- Marketing messaging and featurettes
    ================================================== -->
    <!-- Wrap the rest of the page in another container to center all the content. -->

    <div class="container marketing">

      <!-- START THE FEATURETTES -->

      <hr class="divider">

        <% if (alert_found) { %>
        <div class="alert alert-<%= alert_type %>">
            <%= alert_message %>
        </div>

        <div class="container">
            <legend>Generated Monster Data</legend>
            <div class="col-md-6">
              <div class="form-group">
                <label for="monsterJsonTextarea">Monster JSON</label>
                <textarea class="form-control" id="monsterJsonTextarea" rows="16"><%= JSON.stringify(generatedData['monster'], null, 2) %></textarea>
                <small id="monsterJsonTextareaHelp" class="form-text text-muted">Copy this into a file in <code>resources/db/monster</code>.</small>
              </div>
            </div>

            <div class="col-md-6">
              <div class="form-group">
                <label for="exampleTextarea">Locale JSON</label>
                <textarea class="form-control" id="exampleTextarea" rows="16"><%= JSON.stringify(generatedData['locale'], null, 2) %></textarea>
                <small id="localeJsonTextareaHelp" class="form-text text-muted">Copy these lines (excluding curly braces) into <code>resources/db/locale/en_US.json</code>.</small>
              </div>
            </div>
        </div>
        <% } %>

        <form action="/" method="post">

        <div class="container">
            <legend>Monster Details</legend>
             
            <div class="col-md-12">
              <div class="form-group">
                <label for="monsterName">Monster Name</label>
                <input name="name" aria-describedby="monsterNameHelp" class="form-control" id="monsterName" placeholder="Rockitten">
                <small id="monsterNameHelp" class="form-text text-muted">Name of the monster.</small>
              </div>
            </div>

            <div class="col-md-6">
              <div class="form-group">
                <label for="monsterDescription">Monster Description</label>
                <input name="description" aria-describedby="monsterDescriptionHelp" class="form-control" id="monsterDescription" placeholder="It uses its tiny rock ears for snuggling.">
                <small id="monsterDescriptionHelp" class="form-text text-muted">The long description of the monster.</small>
              </div>
            </div>

            <div class="col-md-6">
              <div class="form-group">
                <label for="monsterCategory">Monster Category</label>
                <input name="category" aria-describedby="monsterCategoryHelp" class="form-control" id="monsterCategory" placeholder="Tiny Cat">
                <small id="monsterCategoryHelp" class="form-text text-muted">Short, one or two word description of the monster.</small>
              </div>
            </div>
        </div>

        <div class="container">
            <legend>Monster Stats</legend>

            <div class="col-md-4">
              <div class="form-group">
                <label for="hpBase">HP</label>
                <div class="span12 centered-text">
                    <input id="stat1" name="hp" aria-describedby="hpBaseHelp" class="form-control" type="text" data-slider-ticks="[0, 25, 50, 75, 100]" data-slider-ticks-snap-bounds="30" data-slider-ticks-labels='["Terrible", "Bad", "Average", "Good", "Great"]'/>
                </div>
                <small id="hpBaseHelp" class="form-text text-muted">Monster's base HP value.</small>
              </div>
            </div>

            <div class="col-md-4">
              <div class="form-group">
                <label for="meleeBase">Melee</label>
                <div class="span12 centered-text">
                    <input id="stat2" name="melee" aria-describedby="hpBaseHelp" class="form-control" type="text" data-slider-ticks="[0, 25, 50, 75, 100]" data-slider-ticks-snap-bounds="30" data-slider-ticks-labels='["Terrible", "Bad", "Average", "Good", "Great"]'/>
                </div>
                <small id="meleeBaseHelp" class="form-text text-muted">Monster's base melee attack power.</small>
              </div>
            </div>

            <div class="col-md-4">
              <div class="form-group">
                <label for="armorBase">Armor</label>
                <div class="span12 centered-text">
                    <input id="stat3" name="armor" aria-describedby="hpBaseHelp" class="form-control" type="text" data-slider-ticks="[0, 25, 50, 75, 100]" data-slider-ticks-snap-bounds="30" data-slider-ticks-labels='["Terrible", "Bad", "Average", "Good", "Great"]'/>
                </div>
                <small id="armorBaseHelp" class="form-text text-muted">Monster's base defense against melee.</small>
              </div>
            </div>

            <div class="col-md-4">
              <div class="form-group">
                <label for="rangedBase">Ranged</label>
                <div class="span12 centered-text">
                    <input id="stat4" name="ranged" aria-describedby="hpBaseHelp" class="form-control" type="text" data-slider-ticks="[0, 25, 50, 75, 100]" data-slider-ticks-snap-bounds="30" data-slider-ticks-labels='["Terrible", "Bad", "Average", "Good", "Great"]'/>
                </div>
                <small id="rangedBaseHelp" class="form-text text-muted">Monster's base ranged attack power.</small>
              </div>
            </div>

            <div class="col-md-4">
              <div class="form-group">
                <label for="dodgeBase">Dodge</label>
                <div class="span12 centered-text">
                    <input id="stat5" name="dodge" aria-describedby="hpBaseHelp" class="form-control" type="text" data-slider-ticks="[0, 25, 50, 75, 100]" data-slider-ticks-snap-bounds="30" data-slider-ticks-labels='["Terrible", "Bad", "Average", "Good", "Great"]'/>
                </div>
                <small id="dodgeBaseHelp" class="form-text text-muted">Monster's base defense against ranged.</small>
              </div>
            </div>

            <div class="col-md-4">
              <div class="form-group">
                <label for="speedBase">Speed</label>
                <div class="span12 centered-text">
                    <input id="stat6" name="speed" aria-describedby="hpBaseHelp" class="form-control" type="text" data-slider-ticks="[0, 25, 50, 75, 100]" data-slider-ticks-snap-bounds="30" data-slider-ticks-labels='["Terrible", "Bad", "Average", "Good", "Great"]'/>
                </div>
                <small id="speedBaseHelp" class="form-text text-muted">Monster's base speed to determine turn order.</small>
              </div>
            </div>

        </div>

        <div class="container">

            <div class="col-md-4">
              <div class="form-group">
                <label for="weight">Weight</label>
                <div class="span12 centered-text">
                    <input id="stat7" name="weight" aria-describedby="weightHelp" class="form-control" type="text" data-slider-ticks="[0, 25, 50, 75, 100]" data-slider-ticks-snap-bounds="30" data-slider-ticks-labels='["Terrible", "Bad", "Average", "Good", "Great"]'/>
                </div>
                <small id="weightHelp" class="form-text text-muted">Monster's weight in pounds.</small>
              </div>
            </div>

            <div class="col-md-4">
                <div class="form-group">
                  <label for="morphProgress">Morph Progress</label>
                  <select class="form-control" name="morphProgress" id="morphProgress">
                    <option>First Stage</option>
                    <option>Second Stage</option>
                    <option>Final Stage</option>
                  </select>
                  <small id="morphProgressHelp" class="form-text text-muted">Stage in the monster's transmutation.</small>
                </div>
            </div>

            <div class="col-md-4">
                <div class="form-group">
                  <label for="types">Types</label>
                  <select multiple class="form-control" name="types" id="types">
                    <option>Fire</option>
                    <option>Earth</option>
                    <option>Metal</option>
                    <option>Wood</option>
                    <option>Water</option>
                  </select>
                </div>
            </div>

        </div>

        <!-- TODO: Add system of adding moves
        <div class="container">
            <legend>Monster Moveset</legend>
        </div>
        -->

        <div class="container">
            <legend>Monster Sprites</legend>

            <div class="col-md-3">
                <div class="form-group">
                  <label for="exampleInputFile">Front Sprite</label>
                  <input type="file" class="form-control-file" name="frontSprite" id="exampleInputFile" aria-describedby="fileHelp">
                  <small id="fileHelp" class="form-text text-muted">Front monster sprite used in battle.</small>
                </div>
            </div>

            <div class="col-md-3">
                <div class="form-group">
                  <label for="exampleInputFile">Back Sprite</label>
                  <input type="file" class="form-control-file" name="backSprite" id="exampleInputFile" aria-describedby="fileHelp">
                  <small id="fileHelp" class="form-text text-muted">Back monster sprite used in battle.</small>
                </div>
            </div>

            <div class="col-md-3">
                <div class="form-group">
                  <label for="exampleInputFile">Face Sprite 1</label>
                  <input type="file" class="form-control-file" name="faceSprite1" id="exampleInputFile" aria-describedby="fileHelp">
                  <small id="fileHelp" class="form-text text-muted">First menu sprite animation frame.</small>
                </div>
            </div>

            <div class="col-md-3">
                <div class="form-group">
                  <label for="exampleInputFile">Face Sprite 2</label>
                  <input type="file" class="form-control-file" name="faceSprite2" id="exampleInputFile" aria-describedby="fileHelp">
                  <small id="fileHelp" class="form-text text-muted">Second menu sprite animation frame.</small>
                </div>
            </div>

            <button type="submit" class="btn btn-primary">Submit</button>
        </div>


        </form>

      <hr class="featurette-divider">

      <!-- /END THE FEATURETTES -->

 </body>

 <% include ../partials/footer %>
 <% include ../partials/bootstrap_footer %>

</html>
